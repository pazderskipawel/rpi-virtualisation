<network>
  <name>haos_net</name>
  <forward mode='nat'/>
  <bridge name='virbr_haos_net' stp='on' delay='0'/>
  <ip address='192.168.0.1' netmask='255.255.255.252'> <!-- /30 subnet for only two IPs -->
    <dhcp>
      <range start='192.168.0.2' end='192.168.0.2'/> <!-- only one IP for the VM -->
    </dhcp>
  </ip>
</network>
